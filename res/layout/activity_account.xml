<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Account">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/acc_add_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_person_outline_red_24dp"
        android:layout_marginTop="10dp"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:text="Name"
       android:textStyle="bold"
       android:textSize="20sp"/>
    <EditText
        android:id="@+id/acc_your_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_text"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:hint="Name"
        android:textStyle="bold"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="E-Mail"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/acc_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_text"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Permanent Address"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/acc_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_text"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:hint="Address"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Reg. mobile Number"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/acc_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_text"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:hint="Phone"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gender"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/acc_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_text"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:hint="Gender"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Age"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/acc_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/oval_text"
        android:padding="5dp"
        android:hint="Age"
        android:textSize="20sp"
        android:textStyle="bold"/>

</LinearLayout>